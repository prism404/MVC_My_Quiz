{% block stylesheets %}
	<!-- CSS only -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
{% endblock %}

{% block header %}
	{% include 'parts/_header.html' %}
{% endblock %}

{% block body %}
	<section class="d-flex justify-content-center m-3">
		<div class="card text-center" style="width: 20rem; box-shadow: rgba(0, 0, 0, 0.772) 0px 2px 4px 0px, rgba(4, 4, 4, 0.779) 0px 2px 16px 0px;">
			<img src="https://cdn-icons-png.flaticon.com/512/3940/3940403.png" class="card-img-top bg-dark" alt="Chicago Skyscrapers"/>
			<div class="card-body p-md-5">
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.pseudo) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn">Register</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
