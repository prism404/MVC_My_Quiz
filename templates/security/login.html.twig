{% block stylesheets %}
	<!-- CSS only -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
{% endblock %}


{% block header %}
	{% include 'parts/_header.html' %}
{% endblock %}

{% block body %}
	<section class="d-flex justify-content-center m-3">
		<div class="card text-center" style="width: 20rem; box-shadow: rgba(0, 0, 0, 0.772) 0px 2px 4px 0px, rgba(4, 4, 4, 0.779) 0px 2px 16px 0px;">
			<img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.onisep.fr%2Fvar%2Fonisep%2Fstorage%2Fimages%2Fmedia%2Fimages%2Fpictos-logo-carte-dro-feuilletter-teleecharger%2Fquiz3%2Fquiz-nouvelle-version-2020%2F14096037-2-fre-FR%2Fquiz-nouvelle-version-2020.jpg&f=1&nofb=1&ipt=f629a71c91feea9dde1bb90510aedf4b002f11ae059038ed044a2a4c5d7e7567&ipo=images" class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem; height: 250px;" alt="Sample photo">
			<div class="card-body p-md-5">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="mt-3 btn btn-lg btn-primary" type="submit">
						Login
					</button>
					<p>Pas encore inscit? <a href="{{path('app_register')}}">Inscription</a></p>
				</form>
			</div>
		</div>
	</section>
{% endblock %}
