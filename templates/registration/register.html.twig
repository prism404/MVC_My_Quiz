{% block header %}
	{% include 'parts/_header.html' %}
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<section class="d-flex justify-content-center m-3">
		<div class="card text-center" style="width: 20rem; box-shadow: rgba(0, 0, 0, 0.772) 0px 2px 4px 0px, rgba(4, 4, 4, 0.779) 0px 2px 16px 0px;">
			<img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.onisep.fr%2Fvar%2Fonisep%2Fstorage%2Fimages%2Fmedia%2Fimages%2Fpictos-logo-carte-dro-feuilletter-teleecharger%2Fquiz3%2Fquiz-nouvelle-version-2020%2F14096037-2-fre-FR%2Fquiz-nouvelle-version-2020.jpg&f=1&nofb=1&ipt=f629a71c91feea9dde1bb90510aedf4b002f11ae059038ed044a2a4c5d7e7567&ipo=images" class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem; height: 250px;" alt="Sample photo">
			<div class="card-body p-md-5">
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.pseudo) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<button type="submit" class="btn btn-primary mt-2">Enregistrer</button>
				{% else %}
					<button type="submit" class="btn btn-primary mt-2">Register</button>
					<p>DÃ©ja inscit?
						<a href="{{path('app_login')}}">Connexion</a>
					</p>
				{% endif %}
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

